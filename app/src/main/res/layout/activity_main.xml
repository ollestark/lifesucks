<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10sp"
    android:orientation="vertical"
    android:paddingRight="10sp"
    android:paddingTop="10sp"
    android:paddingBottom="10sp" tools:context=".com.ollestark.lifesucks.MainActivity"
    android:background="#FFFFFF">



    <Button android:id="@+id/happybutton"
        android:background="@drawable/happy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp" />

    <Button android:id="@+id/sadbutton"
        android:background="@drawable/sad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/happybutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button android:id="@+id/tallybutton"
        android:layout_width="256px"
        android:layout_height="128px"
        android:padding="3sp"
        android:background="@drawable/knapp"
        android:text="Visa hur dagen var"
        android:textColor="#000000"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
